// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shot {
  id           String    @id @unique @default(cuid())
  duration     Float?
  yield        Float?
  dose         Float?
  notes        String?
  coffee       String?
  grindSetting Int?
  bean         Bean?     @relation(fields: [beanId], references: [id])
  user         User?     @relation(fields: [userId], references: [id])
  userId       String?
  updatedAt    DateTime? @updatedAt
  createdAt    DateTime? @default(now())
  beanId       String?
}

model Bean {
  id        String    @id @unique @default(cuid())
  name      String?
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  updatedAt DateTime? @updatedAt
  createdAt DateTime? @default(now())
  Shot      Shot[]
}

model User {
  id        String    @id @unique @default(cuid())
  email     String    @unique
  name      String
  password  String
  shots     Shot[]
  beans     Bean[]
  updatedAt DateTime? @updatedAt
  createdAt DateTime? @default(now())
}

model EASignup {
  id        String    @id @unique @default(cuid())
  email     String    @unique
  updatedAt DateTime? @updatedAt
  createdAt DateTime? @default(now())
}
